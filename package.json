{
  "name": "push-gha-metrics-action",
  "version": "1.5.0",
  "description": "A github action for pushing github actions metrics as loki logs",
  "main": "dist/index.js",
  "scripts": {
    "build": "esbuild src/index.ts --minify --bundle --platform=node --tsconfig=./tsconfig.build.json --outfile=dist/index.js",
    "build:lint": "tsc && eslint --ext ts .",
    "format": "prettier --write .",
    "test:unit": "jest unit",
    "test:integration": "jest integration",
    "update-workflows": "ts-node ./src/scripts/workflow-auto-updater/index.ts",
    "test": "jest"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "type-fest": "^3.2.0",
    "yaml": "^2.1.3",
    "zod": "^3.21.4",
    "zod-validation-error": "^1.3.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@faker-js/faker": "^7.6.0",
    "@octokit/webhooks-types": "^6.7.0",
    "@types/eslint": "^8.37.0",
    "@types/jest": "^29.2.3",
    "@types/node": "^20.8.6",
    "esbuild": "^0.15.15",
    "jest": "^29.3.1",
    "jest-mock-extended": "^3.0.1",
    "nock": "^13.2.9",
    "prettier": "^2.8.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 100,
    "endOfLine": "auto",
    "trailingComma": "all",
    "arrowParens": "always"
  }
}
