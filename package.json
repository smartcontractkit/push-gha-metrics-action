{
  "name": "push-gha-metrics-action",
  "version": "0.0.1",
  "description": "A github action for pushing github actions metrics as loki logs",
  "main": "dist/index.js",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --target=node16 --tsconfig=./tsconfig.build.json --outfile=dist/index.js",
    "build:lint": "tsc",
    "format": "prettier --write .",
    "test:unit": "jest -- unit",
    "test:integration": "jest -- integration",
    "update-workflows": "ts-node ./src/scripts/workflow-auto-updater/index.ts",
    "test": "jest"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "type-fest": "^2.13.1",
    "yaml": "^2.1.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.3.0",
    "@octokit/webhooks-types": "^5.6.0",
    "@types/jest": "^28.1.1",
    "@types/node": "^17.0.41",
    "esbuild": "^0.14.43",
    "jest": "^28.1.1",
    "jest-mock-extended": "^2.0.6",
    "nock": "^13.2.6",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.3"
  }
}
